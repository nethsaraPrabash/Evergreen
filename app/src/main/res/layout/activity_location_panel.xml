<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/secondaryColor"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_back_btn"
            android:id="@+id/notif_back"
            />
        <TextView
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:text="Location"
            android:textSize="60dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/sedan"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="62dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"/>



    </LinearLayout>

    <FrameLayout
        android:id="@+id/location_container"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:layout_width="300dp"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/secondaryColor"
            android:text="Current Location"
            android:textColor="@color/black"
            android:layout_marginStart="50dp"
            android:textSize="39dp"
            android:id="@+id/view_location"
            android:fontFamily="@font/sedan"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/btnColor"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/locate_home"
            android:layout_margin="2dp"
            android:src="@drawable/ic_home"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/locate_fert"
            android:layout_margin="3dp"
            android:src="@drawable/ic_fertilizer"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/locate_tea"
            android:layout_margin="2dp"
            android:src="@drawable/ic_tea"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_settings"
            android:layout_margin="5dp"
            android:id="@+id/locate_settin"/>


    </LinearLayout>


</LinearLayout>